{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node"
    ],
    "newLine": "lf",
    "removeComments": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "**/*.spec.ts"
  ],
  "include": [
    "src",
    "webpack.config.js"
  ]
}
